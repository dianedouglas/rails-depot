<!DOCTYPE html>
<html>
<head>
  <title>Depot</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">
  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "Pragmatic Bookshelf" %>
  </div>
  <div id="columns">
    <div id="side">
      <ul>
        <li><a href="/">Home</a></li>
        <% if !current_user %>
          <li><%= link_to 'Login', login_url %></li>
          <li><%= link_to 'Sign Up', new_user_url %></li>
        <% else %>
          <li><%= link_to 'New Product', new_product_path %></li>
          <li><%= link_to 'Product Administration', products_path %></li>
          <li><%= link_to 'Log Out', logout_url, :method => 'delete' %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div id="main">
    <%= yield %>
  </div>

</body>
</html>
